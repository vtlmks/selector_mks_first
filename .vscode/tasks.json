{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "echo",
			"type": "shell",
			"command": "./build.sh",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": {
				"owner": "cpp",
				"fileLocation": ["relative", "${workspaceFolder}"],
				"pattern": {
					"regexp": "^(.*?):(\\d+):(\\d+):\\s+(error|warning|note):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"clear": true,
				"panel": "shared",
				"showReuseMessage": false
			}
		},
		{
			"label": "runExecutable",
			"type": "shell",
			"command": "./loader", // Replace "your_executable" with your actual executable
			"options": {
				"cwd": "${workspaceFolder}/../../bin" // Set the correct path
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"clear": true,
				"panel": "shared",
				"showReuseMessage": false
			}
		}
	]
}

